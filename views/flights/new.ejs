<%- include('../partials/header') %> 

<h2>Enter a New Flight</h2>
<form action="/flights" method="POST">
    <label>Airline: 
        <select name="airline">
            <option>American</option>
            <option>Southwest</option>
            <option>United</option>
        </select>
    </label><br>
    <label>Airport: 
        <select name="airport">
            <option>DEN</option>
            <option>AUS</option>
            <option>LAX</option>
            <option>SAN</option>
        </select>
    </label><br>
    <label>Flight #: 
        <input type="number" name="flightNo" min="10" max="9999" required>
    </label><br>
    <label>Departs: 
        <input type="datetime-local" name="departs" required>
    </label><br>
    <button type="submit">Save Flight</button>
</form>

<%- include('../partials/footer') %> 